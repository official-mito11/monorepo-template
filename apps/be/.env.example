# Server
PORT=8000
NODE_ENV=development
SERVER_URL=http://localhost:8000

# Process Type (main | admin | worker)
# - main: Main API server (default, port 8000)
# - admin: Admin server (port 8001)
# - worker: Background job processor (no HTTP server)
PROCESS_TYPE=main

# Admin Server Port (used when PROCESS_TYPE=admin)
ADMIN_PORT=8001

# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT Secrets (generate with: openssl rand -base64 32)
AC_TOKEN_SECRET="your-access-token-secret-here"
REF_TOKEN_SECRET="your-refresh-token-secret-here"

# Admin JWT Secret (for admin server authentication)
ADMIN_JWT_SECRET="your-admin-jwt-secret-here"

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# Cookie
# In modern browsers, SameSite=None requires Secure=true. For local HTTP dev,
# use SameSite=Lax and Secure=false.
COOKIE_SAMESITE=lax
COOKIE_SECURE=false
